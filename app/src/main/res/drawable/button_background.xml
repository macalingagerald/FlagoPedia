<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Button Layer -->
    <item android:top="4dp" android:left="1dp" android:right="1dp"> <!-- Offset to create shadow effect -->
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#283593" /> <!-- Darker shade when pressed -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1a237e" /> <!-- Normal color -->
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

